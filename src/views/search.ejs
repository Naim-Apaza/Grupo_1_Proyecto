<!DOCTYPE html>
<html lang="en">
  <!-- Encabezado -->
  <%- include('./partials/head')%>
  <body>
    <!-- Barra de navegacion -->
    <%- include('./partials/header') %>

    <!-- Contenido principal -->
    <main class="index-main">
      <section class="seccion">
        <div class="container">
          <% 
          let bool=true;
            if(productos.length==0){
              bool=false
            }
          %> 
          <%if(bool==true){ %> 
          <% for(let i = 0;i< productos.length;i++ ){ %>  
            <div class="juego-container">
              <img class="img-juego" src="/images/products/<%=productos[i].img_prod %>" alt="img-juego" />
              <div class="desc-box">
                <a href="/products/detail/<%=productos[i].id_producto%>" class="titulo-juego"><%=productos[i].nombre %></a>
                <p class="oferta"><%=productos[i].cant_desc %>  % <i class="fa-solid fa-tag"></i></p>
                <p class="precio"><%=productos[i].precio %>$</p>
              </div>
            </div>
            <% } %> 
            <% }else{ %> 
                <h1 style="font-size: 20px;color: white;display: block;">No estan en este mercado</h1>
              <% } %> 
        </div>
      </section>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>
  </body>
</html>
