<!-- Barra de navegacion -->

<header class="header">
  <div class="header-logo-container">
    <img src="/images/gz-logo.png" alt="logo-header" />
  </div>
  <nav class="navbar">
    <a class="nav-link" href="/">
      <h1 class="link">Home</h1>
      <i class="fa-solid fa-house"></i>
    </a>
    <a class="nav-link" href="/products">
      <h1 class="link">Juegos</h1>
      <i class="fa-solid fa-gamepad"></i>
    </a>
    <a class="nav-link" href="/cart">
      <h1 class="link">Carrito</h1>
      <i class="fa-solid fa-cart-shopping"></i>
    </a>
    <% if(!usuario) { %>
    <a class="nav-link" href="/users/login">
      <h1 class="link">Ingresar</h1>
      <i class="fa-solid fa-user"></i>
    </a>
    <a class="nav-link" href="/users/register">
      <h1 class="link">Registarse</h1>
      <i class="fa-solid fa-user-pen"></i>
    </a>
    <% } else { %>
      <a class="nav-link" href="#">
        <h1 class="link">Hola, <%= usuario.firstName + ' ' + usuario.lastName %>.</h1>
        <i class="fa-solid fa-user"></i>
      </a>
      <% } %>
  </nav>
  <div class="menu-container">
    <i class="fa-solid fa-bars"></i>
  </div>
</header>
